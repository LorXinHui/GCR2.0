<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#DDDDDD" />
            <corners android:radius="20dp" /> <!-- Adjust the radius to match your rounded corners -->
        </shape>
    </item>
    <!-- SearchView Background -->
    <item android:bottom="4dp"> <!-- Adjust shadow elevation by changing the bottom padding -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="20dp" /> <!-- Adjust the radius to match your rounded corners -->
        </shape>
    </item>
</layer-list>